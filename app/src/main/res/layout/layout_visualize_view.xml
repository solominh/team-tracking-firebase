<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_speak"
        android:layout_width="@dimen/waveform_btn_size"
        android:layout_height="@dimen/waveform_btn_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/medium_space"
        android:background="@drawable/shape_circle_view"/>

    <ImageView
        android:id="@+id/view_background"
        android:layout_width="@dimen/waveform_btn_size"
        android:layout_height="@dimen/waveform_btn_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/medium_space"
        android:src="@drawable/shape_circle_bg"/>
    
    <ImageView
        android:id="@+id/btn_speak"
        android:layout_width="@dimen/waveform_btn_size"
        android:layout_height="@dimen/waveform_btn_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/medium_space"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_micro"/>
</RelativeLayout>