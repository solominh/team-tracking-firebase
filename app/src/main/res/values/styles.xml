<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme"></style>

    <style name="Application_Theme" parent="Base.AppTheme">
        <item name="android:windowBackground">@color/text_color_bright</item>
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary_color</item>
        <item name="colorPrimaryDark">@color/app_primary_color_dark</item>
        <item name="colorAccent">@color/app_primary_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- no data view style -->
    <style name="app_no_data_view_style">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">@dimen/font_no_data_view</item>
        <item name="android:layout_marginTop">@dimen/no_data_view_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- App dialog style-->
    <style name="dialog_title" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/app_primary_color</item>
        <item name="android:textSize">@dimen/font_large</item>
        <!--<item name="android:background">@drawable/dialog_content_bg</item>-->
        <item name="android:padding">@dimen/large_space</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog_button_negative" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/button_material_dark</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <!--<item name="android:background">@drawable/dialog_button_negative</item>-->
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="dialog_button_positive" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/button_material_dark</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <!--<item name="android:background">@drawable/dialog_button_positive</item>-->
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextInputLayout.Style" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/app_teal_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- App text view style -->
    <style name="text_view_black_medium">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="text_view_black_small">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="text_view_black_large">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="text_view_dark_medium">
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="text_view_dark_small">
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="text_view_dark_large">
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="text_view_light_medium">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="text_view_light_small">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="text_view_light_large">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="text_view_bright_large">
        <item name="android:textColor">@color/text_color_bright</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    <style name="text_view_bright_medium">
        <item name="android:textColor">@color/text_color_bright</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="text_view_bright_small">
        <item name="android:textColor">@color/text_color_bright</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

</resources>
