<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme"></style>

    <style name="Application_Theme" parent="Base.AppTheme">
        <item name="android:windowBackground">@color/text_color_bright</item>
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary_color</item>
        <item name="colorPrimaryDark">@color/app_primary_color_dark</item>
        <item name="colorAccent">@color/app_primary_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- no data view style -->
    <style name="app_no_data_view_style">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">@dimen/font_no_data_view</item>
        <item name="android:layout_marginTop">@dimen/no_data_view_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Edit text -->
    <style name="login_edit_text_style">
        <item name="android:layout_marginLeft">@dimen/large_space</item>
        <item name="android:layout_marginRight">@dimen/large_space</item>
    </style>

    <style name="edit_text_view">
        <item name="android:background">@color/text_color_bright</item>
        <item name="android:paddingLeft">@dimen/medium_space</item>
        <item name="android:paddingRight">@dimen/medium_space</item>
        <item name="android:paddingTop">@dimen/medium_space</item>
        <item name="android:paddingBottom">@dimen/medium_space</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- TextInputLayout style-->
    <style name="TextInputLayout.Style" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/app_teal_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- App text view style -->
    <style name="text_view_black_medium">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="text_view_black_small">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="text_view_black_large">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="text_view_dark_medium">
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="text_view_dark_small">
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="text_view_dark_large">
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="text_view_light_medium">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="text_view_light_small">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="text_view_light_large">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="text_view_bright_large">
        <item name="android:textColor">@color/text_color_bright</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    <style name="text_view_bright_medium">
        <item name="android:textColor">@color/text_color_bright</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="text_view_bright_small">
        <item name="android:textColor">@color/text_color_bright</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

</resources>
